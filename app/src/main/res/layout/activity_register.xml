<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_registertext"
        android:text="REGISTER"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textSize="36dp"
        android:layout_marginTop="200dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_username"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_registertext"
        android:hint="Username"
        android:background="@drawable/border"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_emailreg"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        android:hint="E-Mail"
        android:background="@drawable/border"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_passwordreg"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/et_emailreg"
        android:hint="Password"
        android:background="@drawable/border"
        android:textAlignment="center"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_logintext"
        app:layout_constraintTop_toBottomOf="@id/et_passwordreg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Already have an account? Login here."
        android:textAlignment="center"
        />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_register"
        app:layout_constraintTop_toBottomOf="@id/tv_logintext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="125dp"
        android:layout_marginLeft="125dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="REGISTER"
        android:textSize="18dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>